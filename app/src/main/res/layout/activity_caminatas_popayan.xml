<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caminatapopayan"
    tools:context=".CaminatasPopayan">

    <Button
        android:id="@+id/planeaydisfrutaaqui2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#29668b"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/popayancam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#29668b"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="POPAYÁN"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="345dp"
        android:backgroundTint="#29668b"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="242dp"
        android:backgroundTint="#29668b"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="102dp"
        android:backgroundTint="#29668b"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/planeaydisfrutainfo"
        android:layout_width="410dp"
        android:layout_height="98dp"
        android:layout_marginBottom="5dp"
        android:background="#F0F87F"
        android:fontFamily="@font/balsamiq_sans"
        android:text="                                         Si lo que buscas es una opción a costo &quot;cero&quot;:"
        android:textColor="#090808"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/elcarmenfoto"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infocaminatasvillavo"
        app:srcCompat="@drawable/caminata1" />

    <ImageView
        android:id="@+id/palmichalfoto"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toTopOf="@+id/planeaydisfrutainfo"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caminata2" />

    <ImageView
        android:id="@+id/cerrosietecoloreesfoto"
        android:layout_width="94dp"
        android:layout_height="87dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caminata3" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/cerrosietecoloresinfo"
        android:layout_width="277dp"
        android:layout_height="110dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="120dp"
        android:background="#FBFBFB"
        android:text="SENDERO ECOLÓGICO \n Para los caminantes y amantes de la naturaleza disponemos de un sendero interpretativo cuyo recorrido de 1.100 metros, con un tiempo de duración de 45 minutos, te invita a disfrutar de todas las bondades del relieve y la vegetación en un ambiente de tranquilidad, aire puro y al son del trino de los pájaros y el murmullo de las cascadas del río La Honda, como música."
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/palmichalinfo"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="250dp"
        android:background="#FBFBFB"
        android:text="Recorrido a pie por el centro histórico de la ciudad de Popayán. Puente del humilladero, iglesias, claustros, museos, Pueblito Patojo, cerro de Tulcán, parque Caldas, Torre del reloj."
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/elcarmeninfo"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="344dp"
        android:background="#FBFBFB"
        android:text="Después de una caminata de 40 minutos desde el estadio de Popayán, podemos disfrutar de una hermosa cascada con una altura de 8 metros que podemos descender en medio de sus cristalinas aguas. "
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/infocaminatasvillavo"
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:layout_marginBottom="436dp"
        android:background="#F0F87F"
        android:fontFamily="@font/balsamiq_sans"
        android:text="CAMINATAS PARTIENDO DESDE POPAYÁN \n Aquí encontrarás diferentes opciones para hacer ecoturismo a los alrededores de la ciudad. Los precios son, por lo general, por persona y dependen del tipo de servicio seleccionado y lo que incluya."
        android:textColor="#090808"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/caminatasvillavo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="CAMINATAS POPAYÁN"
        android:textColor="#29668B"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="106dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoapp" />
</androidx.constraintlayout.widget.ConstraintLayout>
