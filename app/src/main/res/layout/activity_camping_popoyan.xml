<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campingpopayan"
    tools:context=".CampingPopayan">

    <Button
        android:id="@+id/planeaydisfrutaaqui2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="20dp"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/popayancam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="20dp"
        android:text="POPAYÁN"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="310dp"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="210dp"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/planeaydisfrutaaqui5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="103dp"
        android:text="Planea y Disfruta Aquí"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/planeaydisfrutainfo"
        android:layout_width="410dp"
        android:layout_height="98dp"
        android:layout_marginBottom="5dp"
        android:background="#F0F87F"
        android:fontFamily="@font/balsamiq_sans"
        android:text="                                         Si lo que buscas es una opción a costo &quot;cero&quot;:"
        android:textColor="#090808"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/elcarmenfoto"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infocaminatasvillavo"
        app:srcCompat="@drawable/camping1" />

    <ImageView
        android:id="@+id/palmichalfoto"
        android:layout_width="88dp"
        android:layout_height="71dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toTopOf="@+id/planeaydisfrutainfo"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/camping2" />

    <ImageView
        android:id="@+id/cerrosietecoloreesfoto"
        android:layout_width="95dp"
        android:layout_height="79dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/elcarmeninfo"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/camping3" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/cerrosietecoloresinfo"
        android:layout_width="278dp"
        android:layout_height="77dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="120dp"
        android:background="#FBFBFB"
        android:text="Parcela VILLA CRISTAL en la ciudad de Popayán. El sitio ideal para acampar a solo 15 minutos de la ciudad. \n Más de 3.000 metros de zona verde con excelente vista y acceso  a través de sendero a bosque con humedal."
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/palmichalinfo"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="224dp"
        android:background="#FBFBFB"
        android:text="Partiendo desde Popayán al 3 kilometros via panamericana norte, se desvía por la carretera que conduce al parque arqueológico de Tierradentro a 500 metros se encuentra a mano izquierda el ECO PARQUE RAYOS DEL SOL."
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/elcarmeninfo"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="320dp"
        android:background="#FBFBFB"
        android:text="La finca La Carolina te ofrece una grata estadía en un ambiente tranquilo y familiar. Es una excelente opción para quienes disfrutan estar alejados del ruido de la ciudad. \n Por el momento te ofrecemos opción de Camping. Pronto tendremos casa en el árbol."
        android:textColor="#090808"
        android:textColorHint="#1A090909"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toStartOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/infocaminatasvillavo"
        android:layout_width="378dp"
        android:layout_height="52dp"
        android:layout_marginBottom="424dp"
        android:background="#F0F87F"
        android:fontFamily="@font/balsamiq_sans"
        android:text="CAMPING CERCA DE POPAYAN \n Aquí encontrarás diferentes opciones para hacer ecoturismo a los alrededores de la ciudad. Los precios son, por lo general, por persona/noche y dependen del tipo de servicio seleccionado y lo que incluya."
        android:textColor="#090808"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/caminatasvillavo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="CAMPING POPAYÁN"
        android:textColor="#29668B"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="106dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoapp" />
</androidx.constraintlayout.widget.ConstraintLayout>
